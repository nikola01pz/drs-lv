#include <stdio.h>
#include "xparameters.h"
#include "xil_types.h"
#include "xgpio.h"

void print(char *str);

int main()
{
	u8 data;
    XGpio switches;
    int switchesValue;
	int address;
	int i;

    XGpio_Initialize(&switches, XPAR_DIP_SWITCHES_8BITS_DEVICE_ID);
    XGpio_SetDataDirection(&switches, 1, 0xFFFFFFFF);

	while(1)
	{
		int counter = 0;
		u8* temp;
		do {
			data = XUartLite_RecvByte(XPAR_RS232_UART_1_BASEADDR);
			temp=temp+data;
			counter++;
			xil_printf("Counter: %d\n", counter);
			xil_printf("Primljeni podatak je: %d, a ispisan kao character: %c na adresi: %x\r\n", data, data, address);
		} while(data != 13);

		Xil_Out32LE(address, counter);
		xil_printf("%s\n", temp);
		for(i = 1; i < counter; i++)
		{
			address = XPAR_MICRON_RAM_MEM0_BASEADDR+i*4;
			Xil_Out32LE(address, temp[i-1]);
			xil_printf("Primljeni podatak je: %s, a ispisan kao character: %c spremljeno na adresu: %x\r\n", temp[i-1], temp[i-1], address);
		}


	}

    return 0;
}
